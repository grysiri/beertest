@model IEnumerable<BeerTest.Models.Beer>


@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Christmas Beer Test</h1>
    <p class="lead">Statistics</p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brewery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percent)
        </th>
        <th>
            Score
        </th>
        <th>Votes</th>
    </tr>
    
    @foreach (var item in Model.Where( i=>i.Ratings != null))
    {

        //var score = item.Ratings.Sum(r => r.Score);        
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brewery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percent)
            </td>
            <td>
                @*@score*@
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>@item.Ratings.Count</td>
            <td>@Html.ActionLink("Details", "RenderComments", new { id = item.ID })
                
                
            </td>
            
        </tr>

    }

</table>




